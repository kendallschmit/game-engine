# Variables
@rootdir ?= @
@srcdir ?= $(@rootdir)/src
@includedir ?= $(@rootdir)/include

@src = $(wildcard $(@srcdir)/*)
@obj = $(@src:%.c=$(builddir)/%.o)

obj += $(@obj)

# Rules
all: @
@: $(@outfile)
$(@outfile): $(@obj) $($(@liba:%=%outfile))
$(@outfile): LDLIBS += $(@liba:%=-l%)
$(@obj): $($(gameliba:%=%outh))
$(@obj): CFLAGS += -iquote$(@includedir)
